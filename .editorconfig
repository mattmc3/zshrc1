# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.md]
# don't trim trailing space because its valid markdown syntax
indent_style = space
trim_trailing_whitespace = false

[*.zsh]
indent_style = space
indent_size = 2

[.zsh*]
indent_style = space
indent_size = 2
